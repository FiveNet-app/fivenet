    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["server"],
            "buildFlags": "-a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "0"
            }
        },
        {
            "name": "Launch Discord Bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["discord"],
            "buildFlags": "-a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "0"
            }
        },
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["dev"],
            "outputCapture": "std"
        }
    ],
    "compounds": [
        {
            "name": "ALL",
            "configurations": [
                "Launch Frontend",
                "Launch Server"
            ],
            "stopAll": false
        }
    ]
}